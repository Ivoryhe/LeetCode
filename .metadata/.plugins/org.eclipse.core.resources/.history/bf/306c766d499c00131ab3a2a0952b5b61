import java.util.HashSet;

public class Solution {
    public int longestConsecutive(int[] num) {
        int len = num.length;
        if(len <= 1) {return len;}
        int max=1;
        Set<Integer> set = new HashSet<Integer>();
        for(int i:num){
            set.add(i);
        }
        for(int i:num){
            int count = 1;
            int left = i-1;
            int right = i+1;
            while(set.contains(left)){
                set.remove(left);
                count++;
                left--;
            }
            while(set.contains(right)){
                set.remove(right);
                count++;
                right++;
            }
            set.remove(i);
            max = Math.max(count,max);
        }
        return max;
    }
    
}