public class Solution {
    public boolean hasPathSum(TreeNode root, int sum) {
        if(root == null){
            return false;
        }
        
        int num = sum - root.val;
        if(num == 0){
            if(root.left == null && root.right == null){
                return true;
            }
        }

        if(hasPathSum(root.left,num) || hasPathSum(root.right, num)){
            return true;
        }
        else{
            return false;
        }
    }
}