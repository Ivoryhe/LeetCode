
public class Solution {
    public int[] plusOne(int[] digits) {
        if(digits.length == 0){
          int[] nums = new int[1];
          nums[0] = 1;
          return nums;
        } 

        digits[digits.length-1]++;
        for(int i=digits.length-1; i>0; i--){
            if (digits[i] < 10){
                break;
            }
            else{
                digits[i] = 0;
                digits[i-1]++;
            }
        }
        
        int[] a = new int[digits.length+1];
        if(digits[0] == 10){
            a[0] = 1;
            a[1] = 0;
            for(int i=1; i<digits.length-1; i++){
                a[i+1] = digits[i];
            }
            return a;
        }
        else{
            return digits;
        }
        
    }
}